@html.extend('layout', function(model) {
  @html.block('content', function(model) {
    <h1>@model.title</h1>
    <p class="p-4">
      <i style="font-size:xx-small;">Published on @model.post.createtimestamp UTC</i>
    </p>
    <br />
    @html.raw(model.post.body)
  })
  @html.block('archive', function(model){
    @html.include('archive', model)
  })
})